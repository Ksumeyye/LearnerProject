﻿@model List<LearnerProject.Models.Entities.FAQ>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<br />
<h3>Sık Sorulanlar Sayfası</h3>
@{
    int count = 0;
}
<br />
<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Resim</th>
        <th>Soru</th>
        <th>Cevap</th>
        <th>Durum</th>
        <th>İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.ImageUrl</td>
            <td>@(item.Question.Length>50 ? item.Question.Substring(0,50) : item.Question)</td>
            <td>@(item.Answer.Length>50 ? item.Answer.Substring(0,50) : item.Answer)</td>
            <td>@( item.Status == true ? "Aktif" : "Pasif" )</td>

            <td>
                <a href="/AdminFaq/DeleteFaq/@item.FAQId" class="btn btn-outline-danger"><i class="fa fa-trash"></i> Sil</a>
                <a href="/AdminFaq/MakeActive/@item.FAQId" class="btn btn-outline-success">Aktif</a>
                <a href="/AdminFaq/MakePassive/@item.FAQId" class="btn btn-outline-dark">Pasif</a>
                <a href="/AdminFaq/UpdateFaq/@item.FAQId" class="btn btn-outline-info"><i class="fa fa-pen"></i> Güncelle</a>
            </td>

        </tr>
    }
</table>
<br />
<a href="/AdminFaq/AddFaq" class="btn btn-outline-success"> Soru Cevap Ekle</a>