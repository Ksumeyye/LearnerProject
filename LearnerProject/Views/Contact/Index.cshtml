
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<div class="untree_co-hero overlay" style="background-image: url('/Templates/learner-1.0.0/images/img-school-2-min.jpg');">
    <div class="container">
        <div class="row align-items-center justify-content-center">
            <div class="col-12">
                <div class="row justify-content-center ">
                    <div class="col-lg-6 text-center ">
                        <h1 class="mb-4 heading text-white" data-aos="fade-up" data-aos-delay="100">Bizimle İletişime Geçiniz</h1>
                        <div class="mb-5 text-white desc mx-auto" data-aos="fade-up" data-aos-delay="200">
                            <p>İstediğiniz zaman aşağıdaki panelden mesaj göndererek ya da iletişim kanalları üzerinden bize ulaşabilirsiniz.</p>
                        </div>

                        <p class="mb-0" data-aos="fade-up" data-aos-delay="300"><a href="contact" class="btn btn-secondary">Mesaj Gönderiniz</a></p>
                        <script>
                             function scrollToContact() {
                             var contactSection = document.getElementById('contact');
                             contactSection.scrollIntoView({ behavior: 'smooth' });
                            }
                        </script>

                    </div>


                </div>

            </div>

        </div> <!-- /.row -->
    </div> <!-- /.container -->

</div> <!-- /.untree_co-hero -->




<div class="untree_co-section" id="contact">
    <div class="container">

        <div class="row mb-5">
            <div class="col-lg-4 mb-5 order-2 mb-lg-0" data-aos="fade-up" data-aos-delay="100">
                @Html.Action("ContactInfo")
            </div>
            @Html.Action("SendMessage")
        </div>


    </div>
</div> <!-- /.untree_co-section -->