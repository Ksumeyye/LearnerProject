@model List<LearnerProject.Models.Entities.Contact>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>İletişim Sayfası</h2>
@{ 
    int count = 0;
}
<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Adres</th>
        <th>Açık Saatler</th>
        <th>E-mail</th>
        <th>Telefon</th>
        <th>İşlemler</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.Address</td>
            <td>@item.OpenHours</td>
            <td>@item.Email</td>
            <td>@item.Phone</td>
            <td>
                <a href="/AdminContact/DeleteContact/@item.ContactId" class="btn btn-outline-danger"><i class="fa fa-trash"></i> Sil</a>
                <a href="/AdminContact/UpdateContact/@item.ContactId" class="btn btn-outline-info"><i class="fa fa-pen"></i> Güncelle</a>

            </td>
        </tr>
    }
</table>
<br/>
<a href="/AdminContact/AddContact" class="btn btn-outline-success">İletişim Bilgisi Ekle</a>