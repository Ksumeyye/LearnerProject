@model LearnerProject.Models.Entities.Admin
@{
    ViewBag.Title = "UpdateProfile";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Profil Güncelle</h2>
<form method="post">
    @Html.HiddenFor(x=>x.AdminId)
    <label>Profil Resmi</label>
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control", @placeholder = "Profil resmi giriniz" })
    <br />
    <label>Ad Soyad</label>
    @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control", @placeholder = "Ad soyad giriniz" })
    <br />
    <label>Kullanıcı Adı</label>
    @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", @placeholder = "Kullanıcı adı giriniz" })
    <br />
    <label>Şifre</label>
    @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @placeholder = "Şifre giriniz" })
    <br />
    <button class="btn btn-outline-success"><i class="fas fa-save"></i> Kaydet</button>
</form>
